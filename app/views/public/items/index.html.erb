<div class="container">
  <h2 style="margin: 20px 0;">商品一覧(全<%= @items_all.count %>件)</h2>
  <div class="row">
	  <div class="col-2">
		  <%#= render 'public/shared/sidebar', genres: @genres %>
	  </div>
	  <div class="col-12">
	    <div class="row">
        <% @items.each do |item| %>
	        <div class="col-3">
		        <div class="product-card-content">
		          <div style="padding-right: 10px; padding-left: 0px; margin: 10px 0;">
		  	        <%= link_to item_path(item.id) ,style: "color: black;",data: {turbolinks: false} do %>
				        <%= attachment_image_tag item, :image,  :fill, 200, 150, format: 'jpeg',fallback: "no_image.jpg", size:'220x200' %><br>
				        <%= item.name %><br>
				        ¥<%= item.price.to_s(:delimited, delimiter: ',') %>
			        <% end %>
		        </div>
		      </div>
		    </div>
	      <% end %>
	    <div style="text-align: center;"><%= paginate @items %></div>
	    </div>
    </div>
  </div>
</div>