<div class="container">
<div class="row">
	<div class="col-12">
		<h3><strong>注文履歴一覧</strong></h3>
		<table class="table table-bordered table-condensed">
		<tr>
			<th class="col-1">注文日</th>
			<th class="col-1">配送先</th>
			<th class="col-1">注文商品</th>
			<th class="col-1">支払金額</th>
			<th class="col-1">ステータス</th>
			<th class="col-1">注文詳細</th>
		</tr>
		  <% @orders.each do |order| %><tr>
			<td class="col-1"><%= order.created_at.strftime('%Y/%m/%d') %></td>
			<td class="col-3">
			  <%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.name %><br>
			</td>
			<td class="col-1">
				<% sum = 0 %>
				<% order.order_details.each do |order_detail| %>
				<% sum += order_detail.price %>
				<%= order_detail.item.name %><br>
			  <% end %>
			</td>
			<td class="col-1"><%= sum %></td>
			<td class="col-1"><%= order.status %></td>
			<td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
			</tr>
			<% end %>
		</tr>
	</table>
	</div>
</div>
</div>
