<div class="container">
<div class="row">
	<div class="col-12">
		<h3><strong>注文履歴一覧</strong></h3>
		<table class="table table-bordered table-condensed">
		<tr>
			<th>注文日</th>
			<th class="col-3">注文日</th>
			<th class="col-2">注文商品</th>
			<th class="col-1">支払金額</th>
			<th class="col-2">ステータス</th>
			<th class="col-2">注文詳細</th>
		</tr>
		  <% @orders.each do |order| %>
			<td class="col-3"><%= order.created_at %></td>
			<td class="col-2">
			  <%= order.post_code %>
				<%= order.address %>
				<%= order.name %>
			</td>
			<td class="col-1">
				<% order.order_details.each do |order_detail| %>
				<%= order_detail.item.name %><br>
			  <% end %>
			</td>
			<td class="col-2"><%= order.total_payment.to_s(:delimited, delimiter: ',') %></td>
			<td class="col-2"><%= order.status %></td>
			<td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
			<% end %>
		</tr>
	</table>
	</div>
</div>
</div>
