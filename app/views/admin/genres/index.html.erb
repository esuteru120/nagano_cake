 <div class="container takasa">
 <div class="row">
    <div class="col-10 col-offset-1">
      <h2>ジャンル一覧・追加</h2><br>
    <div class="form-group col-md-12">
    <%= form_for(@genre, url: admin_genres_path) do |f| %>
          <%= f.label :ジャンル %>
          <%= f.text_field :name,class: "col-md-4" %>
          <%= f.radio_button :status, :true %>
          <%= f.label :status, "有効"  %>
          <%= f.radio_button :status, :false %>
          <%= f.label :status, "無効" %>
          <%= f.submit "新規登録" ,class: "btn btn-primary" %>
    <% end %>
    </div>
    
    <br>
      <table class="table genre-index">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <p style="color:#FF0000;"><%= flash[:notice_update] %></p>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <% if genre.status %>
                有効
                <% else %>
                無効
                <% end %>
              </td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
  </div>
</div>
</div>