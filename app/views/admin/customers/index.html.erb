<div class="container takasa">
  <div class="row">
    <div class="col-10 col-offset-1">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name,admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active == true %>
                有効
                <% else %>
                退会
                <% end %>
              </td>
            </tr>
            <% end %>
            <%#= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
  </div>