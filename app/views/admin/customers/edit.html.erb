<div class="container">
<div class="row">
<div class="col-10 col-offset-1">
  <h2>会員情報編集</h2>

  <%= form_for(@customer, url: admin_customer_path) do |f| %>

  <table class="table">
    <tr>
      <th class="col-2"><%= f.label :会員ID %></th>
      <td class="col-10"><%= @customer.id %></td>
    </tr>

    <tr>
      <th><%= f.label :氏名 %></th>
      <td class = "form-inline"><%= f.text_field :last_name, class:"form-control mr-4" %>
          <%= f.text_field :first_name, class:"form-control" %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :フリガナ %></th>
      <td class = "form-inline"><%= f.text_field :last_name_kana, class:"form-control mr-4" %>
      <%= f.text_field :first_name_kana, class:"form-control" %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :postal_code, class:"form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address, class:"form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= f.text_field :telephone_number, class:"form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email , class:"form-control"%></td>
    </tr>

    <tr>
      <th><%= f.label :会員ステータス %></th>
      <td><%= f.radio_button :is_active, true %>
          <%= f.label "有効" %>
          <%= f.radio_button :is_active, false %>    
           <%= f.label "退会" %>
      </td>
    </tr>
  </table>


      <div class="row text-right">
        <%= f.submit "変更を保存する" ,class: "btn btn-success " %>
      </div>
  <% end %>
</div>
</div>