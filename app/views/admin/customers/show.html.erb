<div class="container">
<div class="row">
  <div class="col-10 col-offset-1">
      <h2>会員情報詳細</h2>
      
        <table class="table">
            <tr>
              <th class="col-2">会員ID</th>
              <td class="col-10"><%= @customer.id %>
              
              </td>
            </tr>

            <tr>
              <th>氏名</th>
              <td><%= @customer.last_name %>
              <%= @customer.first_name %></td>
            </tr>

            <tr>
              <th>フリガナ</th>
              <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            </tr>

            <tr>
              <th>郵便番号</th>
              <td><%= @customer.postal_code %></td>
            </tr>

            <tr>
              <th>住所</th>
              <td><%= @customer.address %></td>
            </tr>

            <tr>
              <th>電話番号</th>
              <td><%= @customer.telephone_number %></td>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
            
             <tr>
              <th>会員ステータス</th>
            <td><% if @customer.is_active == true %>
              <span class="label label-primary">
                有効
              </span>
              <% else %>
              <span class="label label-danger">
                退会済み
              </span>
              <% end %></td>
            </tr>
        </table>

        <div class="row">
          <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success mr-4"%>
          <%= link_to "注文一覧詳細を見る",admin_root_path, class: "btn btn-success" %>
        </div>
  </div>
</div>
</div>