<div class="container">
<h2>商品編集</h2>
<div class="row">
  <div class="row">
    <%= form_for(@item, url: admin_product_path(@item.id)) do |f| %>
    <div class="col">
      <div class="row form-group">
        <%= f.label :商品画像 ,class: "col-3"%>
        <%= f.attachment_field :image, placeholder: "商品画像", class: "col-9" %>
      </div>
      <div class="row form-group">
        <%= f.label :商品名 ,class: "col-3" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class: "col-6"%>
      </div>
      <div class="row form-group">
        <%= f.label :商品説明 ,class: "col-3" %>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" ,class: "col-6"%>
      </div>
      <div class="row form-group">
        <%= f.label :ジャンル ,class: "col-3" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>
      <div class="row form-group">
        <%= f.label :税抜価格 ,class: "col-3"  %>
        <%= f.text_field :price, autofocus: true, autocomplete: "price" ,class: "col-6"%>
      </div>
      <div class="row align-middle form-group">
        <%= f.label "販売ステータス" ,class: "col-5" %>
        <%= f.radio_button :is_active, true, class: "radio" %>
        <%= f.label "販売中", class: "mr-2" %>
        <%= f.radio_button :is_active, false, class: "radio" %>    
        <%= f.label "販売停止中" %>
      </div>
      <div class="text-right"> <%= f.submit "変更を保存" ,class: "btn btn-primary text-right" %>
      </div>
    </div>
     
       
        </div>
        <% end %>
    </div>
  </div>
</div>
</div>