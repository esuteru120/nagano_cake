<div class="container takasa">
  <h2>商品新規登録</h2><br>
   <div class="row row-new">
    <%= form_for(@item, url:admin_products_path) do |f| %>
      
      <div class="new-field form-group row">
        <h4><%= f.label :商品画像 ,class: "col-xs-3"%></h4>
        <%= f.attachment_field :image, placeholder: "商品画像",class: "col-xs-8" %>
      </div>
      <div class="new-field form-group row">
        <h4><%= f.label :商品名 ,class: "col-xs-3" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class: "col-xs-8"%></h4>
      </div>
      <div class="new-field form-group row">
        <h4><%= f.label :商品説明 ,class: "col-xs-3" %>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" ,class: "col-xs-8"%></h4>
      </div>
      <div class="new-field form-group row">
        <h4><%= f.label :ジャンル ,class: "col-xs-3 fix" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %></h4>
      </div>
      <div class="new-fieldform-group row">
        <h4><%= f.label :税抜価格 ,class: "col-xs-3 block"  %>
        <%= f.text_field :price, autofocus: true, autocomplete: "price" ,class: "col-xs-8"%></h4>
      </div>
      <div class="new-fieldform-group row">
        <h4><%= f.label :販売ステータス  ,class: "col-xs-3 fix" %>
        <%= f.select :is_active, ["販売中", "販売停止"] ,class: "btn btn-primary"%></h4>
      </div>
        <div class="text-right"><%= f.submit "商品登録" ,class: "btn btn-primary"%></div>
    <% end %>
    </div>
</div>